<% include header %>

<h3><a href="/">Het Laatste Nieuws</a></h3>
<hr>

<nav>
  <% for (var i = 0; i < categorieen.length; i++) { %>
    <a href="/categorieen/<%- i %>"><%- categorieen[i] %></a>
  <% } %>
</nav>


  <% var teller = 1; %>
  <% nieuws.forEach(function(item){ %>
    <section>
        <h2>
          <a href=/items/<%- item.id %>><%- item.titel %></a>
        </h2>
        <img src="/img/<%- item.afbeeldings %>" alt="<%- item.titel %>">
        <p><%- item.datum %></p>

        <p>
          <%- item.samenvatting %>
        </p>

        <a class="lees" href=/items/<%- item.id %>>lees meer</a>

        <hr>
    </section>
    <% teller++;}); %>


<% include footer %>
